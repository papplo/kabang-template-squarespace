      <label for="grid-email">E-post</label>
      <input class="text" id="grid-email" type="text" placeholder="E-post">
    </div>
  </div>

  <!-- Second Row -->
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label for="grid-subject">Ämne</label>
      <input class="text" id="grid-subject" type="text" placeholder="Ämne">
    </div>
  </div>

  <!-- Second Row -->
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label for="grid-subject">Meddelande</label>
      <textarea class="area resize-none" id="grid-content" name="grid-content" rows="8" cols="80"></textarea>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full justify-center text-center px-3">
      <input type="submit" value="Skicka" class="button button-secondary text-lg font-bold" />
    </div>
  </div>

